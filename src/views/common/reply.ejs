				</div>
			</div>
			<button type="submit" class="rd-btn">Reply</button>
		</div>
	</div>
</form>

<script>
	if(document.getElementById('reply-to-post-form') !== null) {
		// Get Required DOM Elements 
		const replyForm = document.getElementById('reply-to-post-form');
		const replyField = document.getElementById('reply-input');

		// Declare Function
		function makeReplyField(e) {
			e.preventDefault();
			document.getElementById('reply-to-post-form').classList.add('reply');
			const replyTitle = replyForm.querySelector('.reply-ttl');
			const replyAssets = replyForm.querySelector('.ct_footer_left');
			replyTitle.style.maxHeight = `${replyTitle.scrollHeight}px`
			replyAssets.style.maxHeight = `${replyAssets.scrollHeight}px`
		}

		// Tide function to events
		replyForm.addEventListener('submit', makeReplyField)
		replyField.addEventListener('focus', makeReplyField)
	}
</script>